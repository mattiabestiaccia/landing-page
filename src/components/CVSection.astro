---
interface Props {
  cvUrl?: string;
}

const { cvUrl = '/cv-mattia-bruscia.pdf' } = Astro.props;
---

<section id="cv" class="py-20 bg-surface-100/50 dark:bg-surface-900/50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section header -->
    <div class="text-center mb-12">
      <h2 class="text-3xl sm:text-4xl font-bold text-surface-900 dark:text-surface-100 mb-4">
        Curriculum Vitae
      </h2>
      <p class="text-lg text-surface-600 dark:text-surface-400 max-w-2xl mx-auto">
        View my complete professional background, education, and qualifications.
      </p>
    </div>

    <!-- CV Preview Card -->
    <div class="bg-surface-50 dark:bg-surface-800 rounded-2xl border border-surface-200 dark:border-surface-700 overflow-hidden shadow-xl">
      <!-- PDF Embed -->
      <div class="relative w-full h-[600px] lg:h-[800px] bg-surface-200 dark:bg-surface-900">
        <iframe
          src={cvUrl}
          class="w-full h-full border-0"
          title="Curriculum Vitae - Mattia Bruscia"
        ></iframe>

        <!-- Fallback for browsers that don't support PDF embed -->
        <noscript>
          <div class="absolute inset-0 flex items-center justify-center bg-surface-100 dark:bg-surface-800">
            <p class="text-surface-600 dark:text-surface-400">
              PDF preview not available. Please download the CV below.
            </p>
          </div>
        </noscript>
      </div>

      <!-- Download Bar -->
      <div class="p-6 bg-gradient-to-r from-primary-500/10 to-accent-500/10 border-t border-surface-200 dark:border-surface-700">
        <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 rounded-lg bg-primary-100 dark:bg-primary-900/50 flex items-center justify-center">
              <svg class="w-6 h-6 text-primary-600 dark:text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <div>
              <h4 class="font-semibold text-surface-900 dark:text-surface-100">CV Mattia Bruscia</h4>
              <p class="text-sm text-surface-600 dark:text-surface-400">PDF Document - Updated 2025</p>
            </div>
          </div>

          <div class="flex gap-3">
            <a
              href={cvUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-5 py-2.5 rounded-lg border-2 border-surface-300 dark:border-surface-600 text-surface-700 dark:text-surface-300 font-medium hover:border-primary-500 hover:text-primary-600 dark:hover:text-primary-400 transition-all"
            >
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
              Open in New Tab
            </a>
            <a
              href={cvUrl}
              download="CV-Mattia-Bruscia-2025.pdf"
              class="inline-flex items-center gap-2 px-5 py-2.5 rounded-lg bg-primary-600 hover:bg-primary-700 text-white font-medium transition-all hover:shadow-lg hover:shadow-primary-500/25"
            >
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
              </svg>
              Download CV
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
