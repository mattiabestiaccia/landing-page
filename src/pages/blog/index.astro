---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

function formatDate(date: Date) {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<BaseLayout title="Blog | AI Portfolio" description="Technical articles about AI, Machine Learning, and software engineering.">
  <div class="pt-24 pb-20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="text-center mb-16">
        <h1 class="text-4xl sm:text-5xl font-bold text-surface-900 dark:text-surface-100 mb-4">
          Blog
        </h1>
        <p class="text-lg text-surface-600 dark:text-surface-400">
          Thoughts on AI, Machine Learning, and building intelligent systems.
        </p>
      </div>

      <!-- Posts list -->
      {posts.length === 0 ? (
        <div class="text-center py-12">
          <p class="text-surface-500 dark:text-surface-400">No posts yet. Check back soon!</p>
        </div>
      ) : (
        <div class="space-y-8">
          {posts.map((post) => (
            <article class="group p-6 rounded-2xl bg-surface-50 dark:bg-surface-800 border border-surface-200 dark:border-surface-700 hover:border-primary-400 dark:hover:border-primary-500 hover:shadow-lg transition-all">
              <a href={`/blog/${post.id}`} class="block">
                <div class="flex flex-col sm:flex-row gap-6">
                  {post.data.heroImage && (
                    <div class="sm:w-48 flex-shrink-0">
                      <img
                        src={post.data.heroImage}
                        alt={post.data.title}
                        class="w-full h-32 sm:h-full object-cover rounded-lg"
                      />
                    </div>
                  )}
                  <div class="flex-1">
                    <time class="text-sm text-surface-500 dark:text-surface-400">
                      {formatDate(post.data.pubDate)}
                    </time>
                    <h2 class="text-xl font-bold text-surface-900 dark:text-surface-100 mt-2 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
                      {post.data.title}
                    </h2>
                    <p class="text-surface-600 dark:text-surface-400 mt-2 line-clamp-2">
                      {post.data.description}
                    </p>
                    {post.data.tags.length > 0 && (
                      <div class="flex flex-wrap gap-2 mt-4">
                        {post.data.tags.slice(0, 3).map((tag) => (
                          <span class="px-2 py-1 text-xs font-medium rounded-md bg-primary-100 dark:bg-primary-900/50 text-primary-700 dark:text-primary-300">
                            {tag}
                          </span>
                        ))}
                      </div>
                    )}
                  </div>
                </div>
              </a>
            </article>
          ))}
        </div>
      )}

      <!-- Back link -->
      <div class="mt-12 text-center">
        <a
          href="/"
          class="inline-flex items-center gap-2 text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-medium transition-colors"
        >
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18" />
          </svg>
          Back to Home
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
