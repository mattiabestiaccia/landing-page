---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import SkillsGrid from '../components/SkillsGrid.astro';
import ProjectsSection from '../components/ProjectsSection.astro';
import Timeline from '../components/Timeline.astro';
import CVSection from '../components/CVSection.astro';
import ContactForm from '../components/ContactForm.astro';

const siteConfig = {
  name: "Mattia Bruscia",
  title: "Prompt Engineer & AI Specialist",
  tagline: "Master's student in Bioengineering with expertise in prompt engineering, LLMs, and AI-driven solutions. Specializing in process automation, AI-assisted coding, and research workflows using OpenAI, Anthropic, and LangChain architectures.",
  email: "bruscia95@gmail.com",
  github: "https://github.com/mattiabestiaccia",
  linkedin: "https://www.linkedin.com/in/mattia-bruscia",
};
---

<BaseLayout title={`${siteConfig.name} | ${siteConfig.title}`}>
  <Hero
    name={siteConfig.name}
    title={siteConfig.title}
    tagline={siteConfig.tagline}
    avatarUrl="/avatar.jpeg"
  />

  <SkillsGrid />

  <ProjectsSection />

  <Timeline />

  <CVSection />

  <ContactForm
    email={siteConfig.email}
    githubUrl={siteConfig.github}
    linkedinUrl={siteConfig.linkedin}
  />
</BaseLayout>
